{
  "name": "oneclicktest",
  "displayName": "OneClickTest",
  "description": "Run tests from the right click menu",
  "version": "0.0.1",
  "publisher": "joelbandi",
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:oneclicktest.aboutme",
    "onCommand:oneclicktest.runtest"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "oneclicktest.aboutme",
        "title": "About Me",
        "category": "One Click Test"
      },
      {
        "command": "oneclicktest.runtest",
        "title": "Run Test(s)",
        "category": "One Click Test"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == ruby",
          "command": "oneclicktest.runtest",
          "group": "1testing"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
